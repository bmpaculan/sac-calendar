{
  "id": "com.example.sac.calendar",
  "name": "Employee Timesheet Calendar",
  "description": "Color-coded employee timesheet calendar driven by bound Date + Status.",
  "vendor": "bneXt",
  "version": "1.0.0",
  "newInstancePrefix": "calendar",

  "webcomponents": [
    { "kind": "main",    "tag": "com-example-sac-calendar",          "url": "https://cdn.jsdelivr.net/gh/bmpaculan/sac-calendar@main/calendar.js",           "integrity": "sha256-dev", "ignoreIntegrity": true },
    { "kind": "styling", "tag": "com-example-sac-calendar-styling",  "url": "https://cdn.jsdelivr.net/gh/bmpaculan/sac-calendar@main/calendar_styling.js",   "integrity": "sha256-dev", "ignoreIntegrity": true },
    { "kind": "builder", "tag": "com-example-sac-calendar-builder",  "url": "https://cdn.jsdelivr.net/gh/bmpaculan/sac-calendar@main/calendar_builder.js",   "integrity": "sha256-dev", "ignoreIntegrity": true }
  ],

  "properties": {
    "darkMode":      { "type": "boolean", "default": true },
    "autoLegend":    { "type": "boolean", "default": true },
    "statusInfoJson":{"type": "string",  "default": "{}" },
    "paletteJson":   { "type": "string",  "default": "[]" },

    "style_headerBg":{ "type": "string",  "default": "#f7f9fb" },
    "style_cardBg":  { "type": "string",  "default": "#ffffff" },
    "style_border":  { "type": "string",  "default": "#d9dee2" },
    "style_text":    { "type": "string",  "default": "#37474f" }
  },

  "dataBindings": {
    "main": {
      "feeds": [
        { "id": "date",   "type": "dimension", "description": "Date (day level)" },
        { "id": "status", "type": "dimension", "description": "Status (text)" }
      ]
    }
  },

  "methods": {},
  "events": {}
}
